<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.phone %></td>
    <td><%= user.group_id %></td>
    <td><%= user.admin %></td>
    <td><%= user.op_id %></td>
    <td><%= user.DOB %></td>
    <td><%= user.active %></td>
    <td><%= user.hide_vulgar %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

