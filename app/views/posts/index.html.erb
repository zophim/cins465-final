<h1>Listing posts</h1>
<table>
  <tr>
    <th>Body</th>
    <th>User</th>
    <th>Topic</th>
    <th>Vulgar</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.body %></td>
    <td><%= post.user_id %></td>
    <td><%= post.topic_id %></td>
    <td><%= post.vulgar %></td>
    <td><%= link_to 'Show', topic_post_path(@topic, post) %></td>
    <td><%= link_to 'Edit', edit_topic_post_path(@topic, post) %></td>
    <td><%= link_to 'Destroy', topic_post_path(@topic, post), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

